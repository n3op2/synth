void setup() {
  Serial.begin(9600);

  cli();//stop interrupts

  pinMode(13, OUTPUT);
  pinMode(14, OUTPUT);
  pinMode(15, OUTPUT);
  pinMode(20, OUTPUT);
  pinMode(16, OUTPUT);
  pinMode(17, OUTPUT);
  pinMode(18, INPUT);
  pinMode(19, INPUT);


  DDRD = 0xFF;//port d (digital pins 0-7) all outputs

  TCCR2A = 0;// set entire TCCR2A register to 0
  TCCR2B = 0;// same for TCCR2B
  TCNT2  = 0;//initialize counter value to 0
  // --- mmmm?
  // trigger = 4us 16Mhz / prescaler
  // note = note_hz / 256 / trigger
  OCR2A = 16;
  TCCR2A |= B00000010;
  TCCR2B |= B00000010;
  TIMSK2 |= B00000010;

  sei();
}

